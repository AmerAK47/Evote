{% extends 'base.html.twig' %}

{% block title %}Admin Page{% endblock %}



{% block content %}
<body class="admin-page">  
 
  <div class="container">
    <div align="center">
      <div class="header">
       
        <h1>Bienvenue Admin <i class="bi bi-emoji-smile"></i></h1>
      </div>
      <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
          <h6 class="mb-4">Groupe Vikings</h6>
          <div class="owl-carousel testimonial-carousel">
            <div class="testimonial-item text-center">
              <img class="img-fluid rounded-circle mx-auto mb-4" src="img/maha.jpg" alt="Maha Jabri" style="width: 100px; height: 100px;">
              <h5 class="mb-1">Maha Jabri</h5>
              <p>Front-end developer and designer</p>
              <p class="mb-0">21 ans
                Étudiant 2ème développement système informatique</p>
            </div>
            <div class="testimonial-item text-center">
              <img class="img-fluid rounded-circle mx-auto mb-4" src="img/testimonial-2.jpg" alt="Amer Kouki" style="width: 100px; height: 100px;">
              <h5 class="mb-1">Amer Kouki</h5>
              <p>Back-end developer</p>
              <p class="mb-0">20 ans
                Étudiant 2ème développement système informatique</p>
            </div>
            <div class="testimonial-item text-center">
              <img class="img-fluid rounded-circle mx-auto mb-4" src="img/img.jpg" alt="Ayoub Madyouni" style="width: 100px; height: 100px;">
              <h5 class="mb-1">Ayoub Madyouni</h5>
              <p>Back-end developer</p>
              <p class="mb-0">21 ans
                Étudiant 2ème développement système informatique</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

{% endblock %}

{% block scripts %}
  <script src="path/to/jquery.min.js"></script>
  <script src="path/to/owl.carousel.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.testimonial-carousel').owlCarousel({
        loop: true,
        margin: 10,
        nav: false,
        dots: true,
        autoplay: true,
        autoplayTimeout: 3000,
        responsive: {
          0: {
            items: 1
          },
          600: {
            items: 2
          },
          1000: {
            items: 3
          }
        }
      });
    });
  </script>
{% endblock %}
