{% extends 'base.html.twig' %}

{% block title %}Modifier Candidat{% endblock %}

{% block content %}
<div class="container" align="center">
  <div class="header">
    <h1>Modifier Candidat</h1>
  </div>
  <a href="{{ path('candidat_index') }}" class="btn btn-primary">Retourner Candidat</a>
  <br><br>
  <div class="row">
    <div class="col-12">
      <div class="bg-secondary rounded p-4">
        <form method="POST" action="{{ path('candidat_edit', {'id': candidat.id}) }}">
          {{ form_start(form) }}
          <div class="form-group">
            <label for="{{ form.nom.vars.id }}">Nom:</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            <label for="{{ form.prenom.vars.id }}">Pr√©nom:</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            <label for="{{ form.informations.vars.id }}">Informations:</label>
            {{ form_widget(form.informations, {'attr': {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            <label for="{{ form.sondage.vars.id }}">Sondage:</label>
            {{ form_widget(form.sondage, {'attr': {'class': 'form-control'} }) }}
          </div>
          <br><button type="submit" class="btn btn-primary">Modifier Candidat</button> 
          {{ form_end(form) }}
        </form>
      </div>
      
    </div>
  </div>
</div>
{% endblock %}
