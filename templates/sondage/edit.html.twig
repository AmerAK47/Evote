{% extends 'base.html.twig' %}

{% block title %}Modifier Sondage{% endblock %}

{% block content %}
<div class="container" align="center">
  <div class="header">
    <h1>Modifier Sondage</h1>
  </div>
  <a href="{{ path('sondage_index') }}" class="btn btn-primary">Retourner Sondages</a>
  <br><br>
  <div class="row">
    <div class="col-12">
      <div class="bg-secondary rounded p-4">
        {{ form_start(form) }}
        <div class="form-group">
          {{ form_label(form.nom) }}
          {{ form_widget(form.nom, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.date) }}
          {{ form_widget(form.date, {'attr': {'class': 'form-control datepicker'} }) }}
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Modifier Sondage</button>
        {{ form_end(form) }}
        
      </div>
    </div>
  </div>
</div>
{% endblock %}
